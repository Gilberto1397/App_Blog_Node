<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success mb-3">Nova postagem</button></a>

{{#each postagens}}
    <div class="card">
        <div class="card-body">
        <h4> Titulo: {{titulo}} </h4>
        <p> Descrição: {{descricao}} </p>
        <small>Data: {{data}} </small>
        <small>Categoria: {{categoria.nome}} </small><br><br>
        <a href="/admin/postagens/deletar/{{_id}}"><button type="submit" class="btn btn-danger">Deletar postagem</button></a>
        <a href="/admin/postagens/edit/{{_id}}"><button type="submit" class="btn btn-success">Editar postagem</button></a>
        </div>
    </div>
{{else}}
        <p>Nenhuma postagem registrada!</p>
{{/each}}